{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": false,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "node_modules/@types/*",
        "*"
      ]
    },
  },
  "include": [
    "src/lib"
  ],
  "exclude": [
    "src/lib/**/__tests__/**/*"
  ]
}